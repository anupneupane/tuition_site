<h1>Listing classrooms</h1>

<table>
  <tr>
    <th>Size</th>
    <th>Location</th>
    <th>Duration</th>
    <th>Subject</th>
    <th>Level</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @classrooms.each do |classroom| %>
  <tr>
    <td><%= classroom.size %></td>
    <td><%= classroom.location %></td>
    <td><%= classroom.duration %></td>
    <td><%= classroom.subject %></td>
    <td><%= classroom.level %></td>
    <td><%= link_to 'Show', classroom %></td>
    <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
    <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

